@section endBodyArea{
    <script src="~/assets/js/RegisterScript/RegisterScript.js" type="text/javascript"> </script>
    <script src="~/assets/js/CustomScript.js" type="text/javascript"> </script>
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Tüm Başvurular </h4>
        <button type="button" class="btn btn-primary"  onclick="insertRegisterOpenModal()">+ Yeni Başvuru</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="registerDT" class="display dataTable" style="width:100%;">
                <thead>
                    <tr>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>E-Mail</th>
                        <th>İlan</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Insert Register Modal -->
<div id="insertRegisterModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Başvuru Ekle</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
             <form class="form-valide" id="insertRegisterForm">
                <div class="modal-body">
                    <div class="form-validation">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-firstname">
                                        Ad
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-firstname" name="val-firstname">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-email">
                                        E-Posta
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="email" class="form-control" id="val-email" name="val-email">
                                    </div>
                                </div>                      
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-lastname">
                                        Soyad
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-lastname" name="val-lastname">
                                    </div>
                                </div>
                               <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="advertDropDown">
                                        İlan Seçiniz:
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="advertId" name="advertId" required>
                                            <option value="" selected disabled>İlan Seçiniz..</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Register Modal -->
<div id="editRegisterModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Başvuru Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <form class="form-valide" id="editRegisterForm">
                <div class="modal-body">
                    <div class="form-validation">
                        <div class="row">
                            <input type="hidden" class="form-control" id="val-id">
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-firstname">
                                        Ad
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-firstname" name="val-firstname">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-email">
                                        E-Posta
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="email" class="form-control" id="val-email" name="val-email">
                                    </div>
                                </div>
                             
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-lastname">
                                        Soyad
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-lastname" name="val-lastname">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="advertDropDown">
                                        İlan Seçiniz:
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="advertId" name="advertId" required>
                                            <option value="" selected disabled>İlan Seçiniz..</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

