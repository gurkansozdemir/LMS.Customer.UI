@section endBodyArea{
<script src="~/assets/js/ClassroomScript/ClassroomScript.js" type="text/javascript"> </script>
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Tüm Sınıflar </h4>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#insertClassroomModal">+ Yeni Sınıf</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="classroomDT" class="display dataTable" style="width:100%;">
                <thead>
                    <tr>
                        <th>Sınıf Adı</th>
                        <th>Eğitim Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Include Student Modal -->
<div id="includeStudentModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sınıfa Öğrenci Ata</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <form class="form-valide" id="includeStudentForm">
                <div class="modal-body">
                    <div class="form-validation">
                        <div class="row">
                            <div class="form-group row">
                                <label class="col-lg-6 col-form-label" for="studentDropDown">
                                    Öğrenci Seçiniz:
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="hidden" name="hiddenClassroomId" id="hiddenClassroomId" />
                                    <select id="studentId" name="studentId">
                                        <option value="3">Ahmet Gülgeli</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>